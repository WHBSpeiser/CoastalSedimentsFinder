    "if q.value == 'Point':\n",
    "    \n",
    "    #extract drawn point lat and lon\n",
    "    lon1=radians((dc.last_draw).get(\"geometry\").get(\"coordinates\")[0])\n",
    "    lat1=radians((dc.last_draw).get(\"geometry\").get(\"coordinates\")[1])\n",
    "    \n",
    "    \n",
    "    #convert data geometry column into lat lon columns\n",
    "    df1 = pd.DataFrame(gdf)\n",
    "    df1['lon'] = df1.geometry.apply(lambda p: p.x)\n",
    "    df1['lat'] = df1.geometry.apply(lambda p: p.y)\n",
    "    \n",
    "    lon2=np.radians(df1['lon'])\n",
    "    lat2=np.radians(df1['lat'])\n",
    "    #find difference \n",
    "    dlon = lon2-lon1\n",
    "    dlat = lat2-lat1\n",
    "\n",
    "    #Calculate  Distance\n",
    "    a = np.sin(dlat / 2)**2 + np.cos(lat1) * np.cos(lat2) * np.sin(dlon/ 2)**2 \n",
    "    c = 2 * (np.arctan(np.sqrt(a)/np.sqrt(1 - a)))\n",
    "\n",
    "    #approximate radius of earth in km\n",
    "    R = 6369.947\n",
    "    \n",
    "\n",
    "    \n",
    "    df1['Distance'] = R * c\n",
    "\n",
    "    #sort by distance\n",
    "    distance=df1['Distance']\n",
    "    df1=df1.sort_values(by=['Distance'], ascending=True)\n",
    "    df1=df1[:1]\n",
    "    #export closest data\n",
    "    df1.to_csv(out+'/Closest_SedimentData.csv')\n",
    "\n",
    "if q.value == 'Rectangle Bounds':\n",
    "    \n",
    "  
    "    bnds= (dc.last_draw).get(\"geometry\").get(\"coordinates\")[0]\n",
    "    bnds_poly=Polygon(bnds)\n",
    "    bounds_gpd=gpd.GeoDataFrame(geometry=[bnds_poly])\n",
    "    bounds_gpd=bounds_gpd.set_crs('EPSG:4326')\n",
    "    dataclipped=gpd.clip(gdf, bounds_gpd)\n",
    "    df1 = pd.DataFrame(dataclipped)\n",
    "    df1.to_csv(out+'/Bounds_SedimentData.csv')"
